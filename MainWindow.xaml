<Window x:Class="PersonalFinanceManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalFinanceManager"
        mc:Ignorable="d"
        Title="Personal Finance Manager" Height="800" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <TabItem Header="Dashboard">
                <local:DashboardView />
            </TabItem>
            <TabItem Header="Transactions">
                <local:TransactionsView />
            </TabItem>
            <TabItem Header="Add Transaction">
                <local:AddTransactionView />
            </TabItem>
            <TabItem Header="Reports">
                <local:ReportsView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
